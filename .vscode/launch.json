    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Microservice",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {
                "PGHOST": "localhost",
                "PGDB": "microservice",
                "PGUSER": "microservice",
                "PGPASSWORD": "example123"
            }
        },
        {
            "name": "Remote Microservice",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 4000,
            "host": "127.0.0.1"
        }
    ]
}
